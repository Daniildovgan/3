#include <iostream>
#include <string>


std::string removeCharacter(const std::string& str, size_t index) {
    if (index >= str.size()) {
        std::cerr << "Помилка: індекс виходить за межі рядка." << std::endl;
        return str;
    }
    
    std::string result = str;
    result.erase(index, 1);
    return result;
}

int main() {
    std::string str;
    size_t index;

    std::cout << "Введіть рядок: ";
    std::getline(std::cin, str);

    std::cout << "Введіть індекс символу для видалення: ";
    std::cin >> index;

    std::string result = removeCharacter(str, index);
    std::cout << "Результат: " << result << std::endl;

    return 0;
}
