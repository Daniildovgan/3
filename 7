#include <iostream>
#include <string>


std::string insertCharacter(const std::string& str, char ch, size_t index) {
    if (index > str.size()) {
        std::cerr << "Помилка: індекс виходить за межі рядка." << std::endl;
        return str;
    }
    
    std::string result = str;
    result.insert(result.begin() + index, ch);
    return result;
}

int main() {
    std::string str;
    char ch;
    size_t index;

    std::cout << "Введіть рядок: ";
    std::getline(std::cin, str);

    std::cout << "Введіть символ для вставки: ";
    std::cin >> ch;

    std::cout << "Введіть позицію для вставки: ";
    std::cin >> index;

    std::string result = insertCharacter(str, ch, index);
    std::cout << "Результат: " << result << std::endl;

    return 0;
}
