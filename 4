#include <iostream>
#include <string>
#include <sstream>

int main() {
    std::string str;
    std::cout << "Введіть речення: ";
    std::getline(std::cin, str);

    std::istringstream stream(str);
    std::string word;
    int word_count = 0;

    while (stream >> word) {
        word_count++;
    }

    std::cout << "Кількість слів у реченні: " << word_count << std::endl;

    return 0;
}
